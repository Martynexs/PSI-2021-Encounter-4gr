<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PSI.Views.WaypointInfo"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:vm="clr-namespace:PSI.ViewModels"
             x:DataType="vm:WaypointDetailViewModel"
             Title="Waypoint">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" Command="{Binding WaypointDeleteCommand}"/>
        <ToolbarItem Text="Edit" Command="{Binding EditCommand}"/>
    </ContentPage.ToolbarItems>
    <ScrollView InputTransparent="true">
        <StackLayout>
            <StackLayout Spacing="20" Padding="15">
                <Label Text="Name:" FontSize="Medium" />
                <Label Text="{Binding Name}" FontSize="Small"/>
                <Label Text="Location:" FontSize="Medium" />
                <Label Text="{Binding CoordinatesText}" FontSize="Small"/>
                <maps:Map x:Name="map" HeightRequest="300" IsShowingUser="true"/>
                <Label Text="Type:" FontSize="Medium" />
                <Label Text="{Binding Type}" FontSize="Small"/>
                <Label Text="Price:" FontSize="Medium" />
                <Label Text="{Binding Price}" FontSize="Small"/>
                <Label Text="Opening hours:" FontSize="Medium" />
                <Label Text="{Binding OpeningHours}" FontSize="Small"/>
                <Label Text="Closing hours:" FontSize="Medium" />
                <Label Text="{Binding ClosingHours}" FontSize="Small"/>
                <Label Text="Phone number:" FontSize="Medium" />
                <Label Text="{Binding PhoneNumber}" FontSize="Small"/>
                <Label Text="Description:" FontSize="Medium" />
                <Label Text="{Binding Description}" FontSize="Small"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>