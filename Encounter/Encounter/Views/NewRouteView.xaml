<UserControl x:Class="Encounter.Views.NewRouteView"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
          xmlns:local="clr-namespace:Encounter.Views"
          mc:Ignorable="d" 
          d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Label Content="Label" 
               HorizontalAlignment="Center"
               VerticalAlignment="Center" Margin="0,0,200,0" 
               FontSize="18"/>
        
        <TextBox HorizontalAlignment="Center" 
                 Text="{Binding Name}" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Center" 
                 Width="120"
                 FontSize="18"/>
        
        <Button Content="Cancel"
                Command="{Binding NavigateHomeCommand}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                Margin="100,100,0,0"
                FontSize="18"/>

        <Button Content="Create"
                Command="{Binding NewRouteCommand}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" Margin="0,100,100,0"
                FontSize="18"/>
    </Grid>
</UserControl>
