<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Map3.Views.AboutPage"
             xmlns:vm="clr-namespace:Map3.ViewModels" xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             Title="{Binding Title}">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding=" 24" CornerRadius="0">
            <Label Text="Encounter map!" HorizontalTextAlignment="Center"
                   TextColor="White" FontSize="36" />
        </Frame>



        <maps:Map IsShowingUser="True" MapClicked="Map_MapClicked" />
        <maps:Map x:Name="map" />
    </StackLayout>


</ContentPage>
